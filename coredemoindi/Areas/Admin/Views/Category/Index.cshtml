@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create
                </a>
        </div>
    </div>
</div>
<br /><br /><br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Category name</th>
            <th>Display order</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Displayorderid</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-action="Edit" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> 
                            Edit
                        </a>
                        <a asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i> 
                             Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
